<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="product"
            type="com.example.loginapp.data.remote.api.dto.Product" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/product_image"
                imgUrl="@{product.thumbnail}"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:elevation="@dimen/_3sdp"
                android:scaleType="centerCrop"
                tools:src="@drawable/dog"
                app:shapeAppearance="@style/discount_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_16sdp"/>

        <LinearLayout
            android:maxWidth="@dimen/_200sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_16sdp">
            <TextView
                android:text="@{product.title}"
                android:layout_width="wrap_content"
                android:maxWidth="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textStyle="bold"
                android:maxLines="2"
                tools:text="gvjhjkbhbvjhvhgvydgbjbhfdjkbkjbfkbjbfbvkbfvbbfbkbvfbkjbjkbkj"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_4sdp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/star_2" />

                <TextView
                    android:fontFamily="@font/averia_gruesa_libre_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/gray_500"
                    app:doubleToString="@{product.rating}"
                    tools:text="4.5" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:layout_height="wrap_content"
                android:textColor="@color/seed"
                android:text="@{@string/price_format(product.intToString())}"
                android:textSize="@dimen/_13ssp"
                tools:text="100$" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
