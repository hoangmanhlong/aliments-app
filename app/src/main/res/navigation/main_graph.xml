<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.loginapp.view.fragment.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.loginapp.view.fragment.ProductFragment"
        android:label="ProductFragment" >
        <action
            android:id="@+id/action_productFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchProductFragment"
        android:name="com.example.loginapp.view.fragment.SearchProductFragment"
        android:label="SearchProductFragment" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.loginapp.view.fragment.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/favoriteProductFragment"
        android:name="com.example.loginapp.view.fragment.FavoriteProductFragment"
        android:label="fragment_favorite_product"
        tools:layout="@layout/fragment_favorite_product" />
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.loginapp.view.fragment.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" />
</navigation>